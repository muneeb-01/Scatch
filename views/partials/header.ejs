  <body
    style="font-family: poppins, sans-serif"
    class="font-['helvetica_now_display']"
  >
    <nav class="w-full flex justify-between px-[2vw] py-[3vh]">
      <h3 class="text-xl">Scatch</h3>

      <% var loggedIn = typeof isLoggedIn !== "undefined" ? isLoggedIn : true %>
      <% if (loggedIn) { %>
      <div class="flex gap-5">
        <a href="/shop">Shop</a>
        <a href="/cart">Cart</a>
        <a href="">My Account</a>
        <a href="/users/logout" class="text-red-600">Logout</a>
      </div>

      <% } %>
    </nav>
  </body>
</html>
